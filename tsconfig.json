{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "target": "ES2022", // Обновлено для поддержки React 19
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Добавлено для корректной работы с React 19
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["@types/node", "@types/react", "@storybook/react"],
  },
  "include": [
    "src",
    "global.d.ts",
    "media-recorder-js.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
