{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "target": "ES2022",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "node"],
    "strict": true
  },
  "include": [
    "src",
    "global.d.ts",
    "media-recorder-js.d.ts",
  ],
  "exclude": [
    "node_modules",
    "stories",
    "src/**/*.stories.tsx",
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
}
